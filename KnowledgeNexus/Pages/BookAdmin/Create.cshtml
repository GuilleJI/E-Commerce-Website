@page
@model KnowledgeNexus.Pages.BookAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Select new Book</h1>

<hr />
<div class="row">
    <div class="col-md-3">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FileUpload" class="form-label"></label>
                <input asp-for="FileUpload" class="form-control" />
                <span asp-validation-for="FileUpload" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Name" class="control-label"></label>
                <input asp-for="Books.Name" class="form-control" />
                <span asp-validation-for="Books.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Description" class="control-label"></label>
                <input asp-for="Books.Description" class="form-control" />
                <span asp-validation-for="Books.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Quantity" class="control-label"></label>
                <input asp-for="Books.Quantity" class="form-control" min="0" max="10"/>
                <span asp-validation-for="Books.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Price" class="control-label"></label>
                <input asp-for="Books.Price" class="form-control"/>
                <span asp-validation-for="Books.Price" class="text-danger"></span>
            </div>
            <br/>
            <div class="mb-3">
                <input type="submit" value="Add to Bag" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
