@page
@model KnowledgeNexus.Pages.BookAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Order List</h1>
<br/>

<p>
    <a asp-page="Create" class=" btn btn-success">Buy Books</a>
</p>

@foreach (var item in Model.Books)
{
    <div class="row row-bookadmin">

        <div class="col-md-3">
            <img src="~/uploads/@item.FileName" class="img-fluid" /><br/>
        </div>

        <div class="col-md-9">
            <h3>@item.Name</h3>
            <p>
                @item.Description  
            </p>
            <p>
                <strong>Price:</strong> $@item.Price
            </p>
            <p>
                <strong>Quantity:</strong> @item.Quantity
            </p>
            <p>
                <strong>SubTotal:</strong> $@item.Subtotal
            </p>
            <p>
                <a asp-page="./Edit" asp-route-id="@item.BooksId" class="btn btn-primary">Edit Order</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-page="./Delete" asp-route-id="@item.BooksId" class="btn btn-danger">Delete Order</a>
            </p>
        </div>
    </div>
}