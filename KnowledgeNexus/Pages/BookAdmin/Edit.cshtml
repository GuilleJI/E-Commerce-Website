@page
@model KnowledgeNexus.Pages.BookAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Books.BooksId" />
            <input type="hidden" asp-for="Books.SelectionDate" />

            <div class="mb-3">
                Selected: @Model.Books.SelectionDate
            </div>
            <div class="mb-3">
                <label asp-for="Books.Name" class="control-label"></label>
                <input asp-for="Books.Name" class="form-control" />
                <span asp-validation-for="Books.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Description" class="control-label"></label>
                <input asp-for="Books.Description" class="form-control" />
                <span asp-validation-for="Books.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.FileName" class="control-label"></label>
                <input asp-for="Books.FileName" class="form-control" />
                <span asp-validation-for="Books.FileName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Quantity" class="control-label"></label>
                <input asp-for="Books.Quantity" class="form-control" min="0" max="10" />
                <span asp-validation-for="Books.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Books.Price" class="control-label"></label>
                <input asp-for="Books.Price" class="form-control" />
                <span asp-validation-for="Books.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
