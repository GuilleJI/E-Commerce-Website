@page
@model KnowledgeNexus.Pages.BookAdmin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Username" class="form-label"></label><br>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label><br>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <br />
            <input type="submit" value="Login" class="btn btn-primary" />
        </form>

        <br />
       

    </div>
</div>