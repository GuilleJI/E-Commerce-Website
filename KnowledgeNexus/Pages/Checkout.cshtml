@page
@model KnowledgeNexus.Pages.CheckoutModel

@{
    ViewData["Title"] = "Checkout"; 

}

<h2>Checkout</h2>
<hr />
<br />

<div class="col-md-7 col-lg-8">

    <h3>Order Summary</h3>
    <div class="order-total-summary" data-a8n="checkout_orderSummary_container">
        <div class="row subtotal-item">
            <div class="col-6">
                <div class="order-receipt-label mb-2">Subtotal</div>
            </div>
            <div class="col-6">
                <div class="text-right mb-2"><span class="sub-total fw-bold">CAD$@Model.TotalPrice</span></div>
            </div>
        </div>
        <div class="row shipping-item">
            <div class="col-6">
                <div class="order-receipt-label mb-2">Shipping</div>
            </div>
            <div class="col-6">
                <div class="text-right mb-2"><span class="shipping-total-cost fw-bold">CA$@Model.Shipping</span></div>
            </div>
        </div>
        <div class="row shipping-tax-item">
            <div class="col-6">
                <div class="order-receipt-label mb-2">Shipping Tax</div>
            </div>
            <div class="col-6">
                <div class="text-right mb-2"><span class="shipping-tax-total fw-bold">CA$@Model.ShippingTax</span></div>
            </div>
        </div>
        <div class="row tax-total-item ">
            <div class="col-6">
                <div class="order-receipt-label mb-2">Tax</div>
            </div>
            <div class="col-6">
                <div class="text-right mb-2"><span class="tax-total fw-bold">CA$@Model.Tax</span></div>
            </div>
        </div>
        <hr>
        <div class="row grand-total">
            <div class="col-6">
                <div class="order-summary-heading">Total</div>
            </div>
            <div class="col-6">
                <div class="order-summary-heading text-right"><span class="grand-total-sum fw-bold">CA$@Model.Total</span></div>
            </div>
        </div>
    </div>
    <br />





    <h4 class="mb-3">Billing Address</h4>
    <form class="needs-validation">
        <div class="row g-3">
            <!-- Billing Address fields -->
            <div class="col-sm-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" value="" placeholder="" required asp-for="purchaseData.FirstName" />
                <div class="invalid-feedback">
                    Valid first name is required. 
                </div>
            </div>
            <div class="col-sm-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="" value="" required asp-for="purchaseData.LastName" />
                <div class="invalid-feedback">
                    Valid last name is required
                </div>
            </div>
        </div>
        <br />
        <div class="col-12">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" placeholder="12345 Main St." required asp-for="purchaseData.Address" />
            <div class="invalid-feedback">
                Please enter your shipping address
            </div>
        </div>
        <br />
        <div class="col-12">
            <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
            <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
        </div>
        <br />
        <div class="col-md-5">
            <label for="city" class="form-label">City</label>
            <select class="form-select" id="city" required asp-for="purchaseData.City">
                <option value="">Choose...</option>
                <option>Halifax</option>
            </select>
            <div class="invalid-feedback">
                Please select a valid city.
            </div>
        </div>
        <br />
        <div class="col-md-4">
            <label for="province" class="form-label">Province/Territory</label>
            <select class="form-select" id="province" required asp-for="purchaseData.Province">
                <option value="">Choose...</option>
                <option>Nova Scotia</option>
            </select>
            <div class="invalid-feedback">
                Please provide a valid province/territory.
            </div>
        </div>
        <br />
        <div class="col-md-3">
            <label for="postal-code" class="form-label">Postal Code</label>
            <input type="text" class="form-control" id="postal-code" placeholder="" required asp-for="purchaseData.PostalCode">
            <div class="invalid-feedback">
                Postal Code required.
            </div>
        </div>

        <hr class="my-4" />

        <h4 class="mb-3">Payment</h4>
        <div class="row gy-3">
            <!-- Payment fields -->
            <div class="col-md-6">
                <label for="cc-name" class="form-label">Name on Card</label>
                <input type="text" class="form-control" id="cc-name" placeholder="" required asp-for="purchaseData.CardName" />
                <small class="text-muted">Full name as displayed on card</small>
                <div class="invalid-feedback">
                    Name on card is required
                </div>
            </div>

            <div class="col-md-6">
                <label for="cc-number" class="form-label">Credit card number</label>
                <input type="text" class="form-control" id="cc-number" placeholder="" required asp-for="purchaseData.CardNumber">
                <div class="invalid-feedback">
                    Credit card number is required
                </div>
            </div>

            <div class="col-md-3">
                <label for="cc-expiration" class="form-label">Expiration</label>
                <input type="text" class="form-control" id="cc-expiration" placeholder="" required asp-for="purchaseData.ExpirationDate">
                <div class="invalid-feedback">
                    Expiration date required
                </div>
            </div>

            <div class="col-md-3">
                <label for="cc-cvc" class="form-label">CVC</label>
                <input type="text" class="form-control" id="cc-cvc" placeholder="" required asp-for="purchaseData.Cvc">
                <div class="invalid-feedback">
                    Security code required
                </div>
            </div>

            <hr class="my-4">
                           
        </div>
        <br />
        <!-- Display validation errors -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <button type="submit" class="btn btn-primary">Submit Order</button>
        <a asp-page="./Index" class="btn btn-warning">Continue Shopping</a>
    </form>
</div>





