@page
@model KnowledgeNexus.Pages.CheckoutModel

@{
    ViewData["Title"] = "Checkout"; 

}

<h2>Checkout</h2>
<hr />

<!-- Displaying purchase price -->
<h3 style="color: navy;">Total Purchase Price: CA$@Model.TotalPrice</h3>
<br />


<div class="col-md-7 col-lg-8">
    <h4 class="mb-3">Billing Address</h4>
    <form class="needs-validation" novalidate>
        <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type ="text" class="form-control" id="firstName" value="" placeholder="" required/>
                <div class="invalid-feedback">
                    Valid first name is required. 
                </div>
            </div>
        

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="" value="" required />
                <div class="invalid-feedback">
                    Valid last name is required
                </div>
            </div>
        </div>
        <br />
        <div class="col-12">
            <label for="address" class="form-label">Address</label>
            <input type ="text" class="form-control" id="address" placeholder="12345 Main St." required />
            <div class="invalid-feedback">
                Please enter your shipping address
            </div>
        </div>
        <br />
        <div class="col-12">
            <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
            <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
        </div>
        <br />
        <div class="col-md-5">
            <label for="city" class="form-label">City</label>
            <select class="form-select" id="city" required>
                <option value="">Choose...</option>
                <option>Halifax</option>
            </select>
            <div class="invalid-feedback">
                Please select a valid city.
            </div>
        </div>
        <br />
        <div class="col-md-4">
            <label for="province" class="form-label">Province/Territory</label>
            <select class="form-select" id="province" required>
                <option value="">Choose...</option>
                <option>Nova Scotia</option>
            </select>
            <div class="invalid-feedback">
                Please provide a valid province/territory.
            </div>
        </div>
        <br />
        <div class="col-md-3">
            <label for="postal-code" class="form-label">Postal Code</label>
            <input type="text" class="form-control" id="postal-code" placeholder="" required>
            <div class="invalid-feedback">
                Postal Code required.
            </div>
        </div>

        <hr class="my-4" />

        <h4 class="mb-3">Payment</h4>
        <div class="row gy-3">
            <div class="col-md-6">
                <label for="cc-name" class="form-label">Name on Card</label>
                <input type="text" class="form-control" id="cc-name" placeholder="" required />
                <small class="text-muted">Full name as displayed on card</small>
                <div class="invalid-feedback">
                    Name on card is required
                </div>
            </div>

            <div class="col-md-6">
                <label for="cc-number" class="form-label">Credit card number</label>
                <input type="text" class="form-control" id="cc-number" placeholder="" required>
                <div class="invalid-feedback">
                    Credit card number is required
                </div>
            </div>

            <div class="col-md-3">
                <label for="cc-expiration" class="form-label">Expiration</label>
                <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
                <div class="invalid-feedback">
                    Expiration date required
                </div>
            </div>

            <div class="col-md-3">
                <label for="cc-cvc" class="form-label">CVC</label>
                <input type="text" class="form-control" id="cc-cvc" placeholder="" required>
                <div class="invalid-feedback">
                    Security code required
                </div>
            </div>

            <hr class="my-4">

        </div>
    </form>
</div>


